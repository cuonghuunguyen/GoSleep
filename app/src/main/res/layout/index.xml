<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#fff">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect with your Calendar"
        android:textColor="#69db0d"
        android:textFontWeight="bold"
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:background="@drawable/bordercus"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="170dp"
            android:layout_height="71dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginLeft="17dp"
            app:srcCompat="@drawable/connect"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="416dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="169dp"
            android:layout_height="71dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="203dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/dis"
            tools:layout_editor_absoluteX="210dp"
            tools:layout_editor_absoluteY="416dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="120dp"
            android:text="Set your Calendar"
            android:textAlignment="center"
            android:textColor="#000"
            android:textFontWeight="bold"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="155dp"
            android:text="Click here!"
            android:textAlignment="center"
            android:textColor="#DF0101"
            android:textFontWeight="bold"
            android:textSize="23dp"
            />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Created By GoSleep"
            android:textColor="#000"
            android:textFontWeight="bold"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>



</LinearLayout>